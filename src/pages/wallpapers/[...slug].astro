---
// src/pages/wallpapers/[...slug].astro
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const wallpapers = await getCollection('wallpapers');
  return wallpapers.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{entry.data.title}</title>
  </head>
  <body class="bg-gray-900 text-white">
    <a href="/" class="absolute top-4 left-4 text-blue-400 hover:underline">&lt; 返回首页</a>
    <div class="min-h-screen flex flex-col items-center justify-center p-4">
      <h1 class="text-5xl font-bold mb-4">{entry.data.title}</h1>
      <img src={entry.data.fullImg} alt={entry.data.title} class="max-w-4xl w-full rounded-lg shadow-2xl mb-4" />
      <div class="prose prose-invert max-w-2xl">
        <Content />
      </div>
    </div>
  </body>
</html>
