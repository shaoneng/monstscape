---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import WallpaperCard from '../components/WallpaperCard.astro';

const wallpapers = await getCollection('wallpapers');
---
<Layout title="Labubu Wallpaper Wonderland">
  <main class="container mx-auto p-4">
    <h1 class="text-center text-5xl font-bold my-8">Wallpaper Gallery</h1>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {wallpapers.map(wallpaper => (
        <WallpaperCard {wallpaper} />
      ))}
    </div>
  </main>
</Layout>